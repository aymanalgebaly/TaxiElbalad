<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_taxi_new"
    tools:context=".ui.fragment.TicketFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:background="@drawable/tkt_img"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="130dp"
            android:layout_marginTop="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/button_design_curv_brown"
            android:text="حجز تذكرة"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:background="@drawable/button_design_curv_soft_gray">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:id="@+id/sp_over_five"/>

        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text=" عدد الركاب فوق 5 سنوات"
            android:gravity="center"
            android:background="@drawable/button_design_very_curv_mid_gray"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@drawable/button_design_curv_soft_gray">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:id="@+id/sp_under_five"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="5dp"
                    android:text="عدد الركاب تحت 5 سنوات"
                    android:gravity="center"
                    android:background="@drawable/button_design_very_curv_mid_gray"/>
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:hint="@string/last_name"
            android:id="@+id/ed_last_name"
            android:background="@drawable/button_design_curv_soft_gray"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sp_ma7ata">

            </Spinner>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="محطة الوصول"
            android:gravity="center"
            android:background="@drawable/button_design_very_curv_mid_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/txt_date"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:paddingEnd="5dp"
            android:clickable="false"
            android:paddingStart="5dp"
            android:background="@drawable/button_design_curv_soft_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="تاريخ الوصول"
            android:gravity="center"
            android:background="@drawable/button_design_very_curv_mid_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/txt_time"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:clickable="false"
            android:paddingStart="5dp"
            android:background="@drawable/button_design_curv_soft_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="وقت الوصول"
            android:gravity="center"
            android:background="@drawable/button_design_very_curv_mid_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/ed_pass"
            android:gravity="center_vertical"
            android:paddingEnd="5dp"
            android:inputType="textPassword"
            android:paddingStart="5dp"
            android:background="@drawable/button_design_curv_soft_gray">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sp_type_ticket">

            </Spinner>
        </RelativeLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="نوع التذكرة"
            android:gravity="center"
            android:background="@drawable/button_design_very_curv_mid_gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">


        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:weightSum="3"
            android:background="@drawable/button_design_curv_yellow">


            <TextView
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="ريال سعودي"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:id="@+id/price_value"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:text="السعر"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/button_design_curv_yellow"/>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_design_very_curv_yellow"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:text="حجز"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/btn_confirm"
        android:textColor="@color/black"
        android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:id="@+id/progress"/>
</FrameLayout>