<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_taxi_new"
    tools:context=".ui.activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:transitionName="lin_trans"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/lin_main">


        <Button
            android:layout_width="150dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="دخول للحساب"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            android:transitionName="btn_trans"
            android:layout_margin="20dp"
            android:id="@+id/btn_sign_up"
            android:textStyle="bold"
            android:background="@drawable/button_design_curv_dark_gray"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:id="@+id/card_view"
            android:transitionName="card_trans"
            android:layout_gravity="center_horizontal"
            android:background="@color/yellow"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="lin_trans"
                android:background="@drawable/button_design_curv_yellow"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:transitionName="img_trans"
                    android:background="@drawable/pro_img"
                    android:id="@+id/img_main"
                    android:layout_gravity="center_horizontal"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lin_fields">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_design_very_curv_mid_gray"
            android:text="البريد الالكتروني"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:hint="Taxi@example.com"
            android:id="@+id/ed_email"
            android:gravity="center"
            android:background="@drawable/button_design_curv_soft_gray"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_design_very_curv_mid_gray"
            android:text="كلمة المرور"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:hint="**********"
            android:gravity="center"
            android:id="@+id/ed_pass"
            android:inputType="textPassword"
            android:background="@drawable/button_design_curv_soft_gray"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"/>

        <Button
            android:id="@+id/btn_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:text="دخول"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/button_design_very_curv_yellow"/>
    </LinearLayout>

    </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress"/>
</FrameLayout>