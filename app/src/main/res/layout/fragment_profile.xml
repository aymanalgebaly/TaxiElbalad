<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_taxi_new"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/boss_biger_biger"
                android:id="@+id/img_pro"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="2dp"
            android:textSize="12sp"
            android:id="@+id/btn_signOut"
            android:background="@drawable/button_design_curv_pro"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:text="تسجيل الخروج"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_design_curv_pro"
            android:textColor="@color/yellow"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:id="@+id/btn_current"
            android:textStyle="bold"
            android:text="حجوزات نشطة"
            android:textSize="12sp"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:textSize="12sp"
            android:id="@+id/btn_old"
            android:background="@drawable/button_design_curv_pro"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:text="حجوزات سابقة"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_design_curv_pro"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/btn_data"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="2dp"
            android:text="تعديل الملف"/>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:id="@+id/lin_change">


            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_design_very_curv_mid_gray"
                android:weightSum="3">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text=""
                    android:id="@+id/ed_f_name"
                    android:background="@drawable/button_design_very_curv_mid_gray"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="الاسم الاول"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_design_very_curv_mid_gray"
                android:weightSum="3">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text=""
                    android:id="@+id/ed_l_name"
                    android:background="@drawable/button_design_very_curv_mid_gray"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="اسم العائلة"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_design_very_curv_mid_gray"
                android:weightSum="3">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/ed_phone"
                    android:background="@drawable/button_design_very_curv_mid_gray"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="5dp"
                    android:inputType="phone"
                    android:paddingStart="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="رقم الجوال"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_design_very_curv_mid_gray"
                android:weightSum="3">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text=""
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/ed_mail"
                    android:background="@drawable/button_design_very_curv_mid_gray"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="البريد الالكتروني"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_design_very_curv_mid_gray"
                android:weightSum="3">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:text=""
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/ed_pass"
                    android:background="@drawable/button_design_very_curv_mid_gray"
                    android:gravity="center_vertical|end"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="كلمة المرور"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>




            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button_design_very_curv_yellow"
                android:textColor="@color/black"
                android:text="حفظ"
                android:id="@+id/btn_save"
                android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/lin_rcv_older">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rcv_older">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress"/>
</FrameLayout>