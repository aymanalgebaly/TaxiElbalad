<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_taxi_new"
    tools:context=".ui.activity.RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:transitionName="lin_trans"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:id="@+id/lin_main">


            <Button
                android:layout_width="150dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="تسجيل جديد"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                android:transitionName="btn_trans"
                android:layout_margin="20dp"
                android:id="@+id/btn_sign_up"
                android:textStyle="bold"
                android:background="@drawable/button_design_curv_brown"/>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:id="@+id/card_view"
                android:transitionName="card_trans"
                android:layout_gravity="center_horizontal"
                android:background="@color/yellow"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="lin_trans"
                    android:background="@drawable/button_design_curv_yellow"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:transitionName="img_trans"
                        android:background="@drawable/pro_img"
                        android:id="@+id/img_main"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:id="@+id/ed_first_name"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/first_name"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="الاسم الاول"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="@string/last_name"
                android:id="@+id/ed_last_name"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="اسم العائلة"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/ed_phone"
                android:hint="0096655455545"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="رقم الجوال"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/ed_mail"
                android:hint="Example@Example.com"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="البريد الالكتروني"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="*********"
                android:id="@+id/ed_pass"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="كلمة المرور"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <EditText
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="*********"
                android:id="@+id/ed_con_pass"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="تأكيد كلمة المرور"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:id="@+id/img_register"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_design_curv_soft_gray"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </View>
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="5dp"
                android:text="صورة الملف"
                android:gravity="center"
                android:background="@drawable/button_design_very_curv_mid_gray"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="تسجيل"
            android:id="@+id/btn_confirm_confirm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_design_very_curv_yellow"/>

    </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progress"/>
</FrameLayout>