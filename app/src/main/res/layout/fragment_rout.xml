<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_taxi_new"
    tools:context=".ui.fragment.RoutFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/curve"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img_ticket_rout"
                    android:background="@drawable/rout_img"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:weightSum="3"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lin_t"
                android:layout_margin="5dp"
                android:background="@drawable/button_design_curv_mid_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/red_field"
                    android:text="المسار الثاني"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/txt_note_two"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txt_note_two"
                    android:text="من سوق المحمل الي سوق البدو"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/txt_click_two"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/lin_one"
                android:background="@drawable/button_design_curv_mid_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/red_field"
                    android:text="المسار الاول"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/txt_note_one"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txt_note_one"
                    android:text="من ابراج الباشا الي سوق قابل"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:id="@+id/txt_click_one"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </View>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lin_f"
                android:layout_margin="5dp"
                android:background="@drawable/button_design_curv_mid_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/red_field"
                    android:text="المسار الرابع"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/txt_note"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txt_note"
                    android:text="من باب المدينة الي مسجد الشافعي"
                    android:gravity="center"
                    android:id="@+id/txt_click_four"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/lin_th"
                android:background="@drawable/button_design_curv_mid_gray">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/red_field"
                    android:text="المسار الثالث"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/txt_noteFour"
                    android:textColor="@color/yellow"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txt_noteFour"
                    android:text="من شارع الذهب الي برحة بيت نصيف"
                    android:gravity="center"
                    android:id="@+id/txt_click_three"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </RelativeLayout>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

            </View>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>